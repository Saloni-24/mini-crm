const jwt = require("jsonwebtoken");

//  to Check if token is valid (login proof)
const protect = (req, res, next) => {
  const tokenHeader = req.headers.authorization;

  if (!tokenHeader || !tokenHeader.startsWith("Bearer ")) {
    console.log("ğŸš« Token is missing or format is wrong");
    return res.status(401).json({ message: "Login first! Token is required ğŸªª" });
  }

  const token = tokenHeader.split(" ")[1];

  try {
    const decodedUser = jwt.verify(token, process.env.JWT_SECRET );

    req.user = decodedUser;
    console.log("âœ… Token verified, user is:", decodedUser.username);
    next();
  } catch (err) {
    console.log("âš ï¸ something is wrong with token:", err.message);
    res.status(401).json({ message: "Token is invalid! Login again ğŸ˜“" });
  }
};

// ğŸ”’ Middleware: Check if user is admin
const isAdmin = (req, res, next) => {
  if (req.user && req.user.role === "admin") {
    console.log("âœ… Admin access approved ğŸ›¡ï¸");
    next();
  } else {
    console.log("ğŸš« Access denied! you are not the admin..");
    res.status(403).json({ message: "Only admins allowed here! ğŸ‘®" });
  }
};

module.exports = { protect, isAdmin };
